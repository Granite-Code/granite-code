{
  "name": "granite-code",
  "author": "Red Hat, Inc",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/granite-code/granite-code"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "bugs": {
    "url": "https://github.com/granite-code/granite-code/issues"
  },
  "qna": "https://github.com/granite-code/granite-code/issues/new/choose",
  "license": "Apache-2.0",
  "displayName": "Granite.Code - Enhanced development with Granite model AI",
  "pricing": "Free",
  "description": "Granite model assisted code development",
  "publisher": "redhat",
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=20.11.0"
  },
  "engine-strict": true,
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Education",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "granite",
    "continuedev",
    "continue",
    "chatgpt",
    "github",
    "copilot",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:continueGUIView"
  ],
  "main": "./out/index.js",
  "scripts": {
    "check-coding-style": "prettier -c .",
    "fix-coding-style": "prettier -w .",
    "install-dependencies": "node scripts/install-dependencies.js",
    "build": "node scripts/build.js",
    "create-package": "node scripts/create-package.js",
    "create-darwin-arm64-package": "node scripts/create-package.js --target darwin-arm64",
    "create-darwin-x64-package": "node scripts/create-package.js --target darwin-x64",
    "create-linux-arm64-package": "node scripts/create-package.js --target linux-arm64",
    "create-linux-x64-package": "node scripts/create-package.js --target linux-x64",
    "create-win32-x64-package": "node scripts/create-package.js --target win32-x64"
  },
  "devDependencies": {
    "@vscode/vsce": "2.15.0",
    "esbuild": "^0.25.0",
    "minimatch": "^10.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.9"
  },
  "dependencies": {
    "glob": "^11.0.1"
  }
}
