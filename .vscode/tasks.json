{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Update git submodules",
      "type": "shell",
      "command": "git",
      "args": ["submodule", "update", "--init", "--recursive"],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

    {
      "label": "Install dependencies",
      "type": "npm",
      "script": "install-dependencies",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },

    {
      "label": "Prelaunch",
      "dependsOn": ["Build extension", "Dev GUI"],
      "dependsOrder": "parallel"
    },

    {
      "label": "Build extension",
      "type": "npm",
      "script": "build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Start the React App for debugging with Vite
    {
      "label": "Dev GUI",
      "type": "shell",
      "command": "npm",
      "options": {
        "cwd": "${workspaceFolder}/continue/gui"
      },
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "UNMATCHED(X)(Y)(Z)",
              "file": 1,
              "line": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "UNMATCHED",
            "endsPattern": "VITE.*ready"
          }
        }
      ]
    }
  ]
}
