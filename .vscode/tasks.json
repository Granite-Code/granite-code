{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Update git submodules",
      "type": "shell",
      "command": "git",
      "args": ["submodule", "update", "--init", "--recursive"],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },

    {
      "label": "Install dependencies",
      "type": "npm",
      "script": "install-dependencies",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },

    {
      "label": "Build extension",
      "type": "npm",
      "script": "build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
